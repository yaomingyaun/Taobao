<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bjitmap">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_150"
        android:background="@drawable/circle"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/tx_icon"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:src="@mipmap/touxiang_icon"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我是一个吃不胖的小姐姐诶"/>
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/my_icon_information"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="20sp"
                android:text="个人资料"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_200"
            android:layout_height="1dp"
            android:background="#888888"
            android:layout_marginLeft="@dimen/dp_90"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/my_icon_circle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="20sp"
                android:text="我的圈子"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_200"
            android:layout_height="1dp"
            android:background="#888888"
            android:layout_marginLeft="@dimen/dp_90"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/my_icon_foot"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="20sp"
                android:text="我的足迹"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_200"
            android:layout_height="1dp"
            android:background="#888888"
            android:layout_marginLeft="@dimen/dp_90"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/my_icon_wallet"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="20sp"
                android:text="我的钱包"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_200"
            android:layout_height="1dp"
            android:background="#888888"
            android:layout_marginLeft="@dimen/dp_90"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/my_icon_address"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="20sp"
                android:text="我的收货地址"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_200"
            android:layout_height="1dp"
            android:background="#888888"
            android:layout_marginLeft="@dimen/dp_90"/>
    </LinearLayout>

</LinearLayout>
