<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="@mipmap/login_register_background">
    <ImageView
        android:id="@+id/login_phone"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/login_icon_phone"
        android:layout_alignBottom="@id/et_phone"/>
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_30"
        android:background="@null"
        android:textColorHint="#ffff"
        android:layout_toRightOf="@id/login_phone"
        android:hint="请输入手机号"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/dp_10"
        />
    <View
        android:id="@+id/v1"
        android:layout_width="@dimen/dp_250"
        android:layout_below="@id/et_phone"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        />
    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignBottom="@id/et_pass"
        android:src="@mipmap/login_icon_lock"
      />
    <EditText
        android:id="@+id/et_pass"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@id/v1"
        android:layout_toRightOf="@id/login_phone"
        android:background="@null"
        android:textColor="#fff"
        android:textColorHint="#ffff"
        android:password="true"
        android:hint="请输入密码"/>
    <View
        android:id="@+id/v2"
        android:layout_width="@dimen/dp_250"
        android:layout_below="@id/et_pass"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="#fff"/>
    <ImageView
        android:id="@+id/login_pass"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/login_icon_eye"
        android:layout_below="@id/login_phone"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_alignBottom="@id/v2"
       android:layout_toRightOf="@id/et_pass"/>
       <CheckBox
           android:id="@+id/jz_pass"
           android:layout_width="@dimen/dp_40"
           android:layout_height="@dimen/dp_40"
           android:buttonTint="#ffff"
           android:layout_below="@id/v2"/>
    <TextView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@id/v2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/jz_pass"
        android:textColor="#fff"
        android:text="记住密码"/>
       <TextView
           android:id="@+id/kszc"
           android:layout_width="@dimen/dp_60"
           android:layout_height="@dimen/dp_30"
           android:text="快速注册"
           android:textColor="#ffff"
           android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/jz_pass"
           android:layout_marginLeft="@dimen/dp_180"
           android:layout_below="@id/v2"/>
    <Button
        android:id="@+id/login"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/v2"
        android:layout_marginTop="100dp"
        android:text="登录"
        android:textColor="#ff0000"
        android:background="@drawable/button"/>

</RelativeLayout>