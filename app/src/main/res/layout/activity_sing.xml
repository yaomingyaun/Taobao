<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginandsing.sing.activity.SingActivity"
    android:orientation="vertical"
    android:background="@mipmap/login_register_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_100">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/login_icon_phone"
            android:layout_marginLeft="@dimen/dp_30"/>
        <EditText
            android:id="@+id/sing_phone"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_30"
            android:background="@null"
            android:textColorHint="#ffff"
            android:hint="手机号"
            />
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_300"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginLeft="@dimen/dp_40"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">
        <ImageView
            android:id="@+id/login_phone"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/login_icon_verification"
            android:layout_marginLeft="@dimen/dp_30"/>
        <EditText
            android:id="@+id/sing_yzm"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_30"
            android:background="@null"
            android:textColorHint="#ffff"
            android:hint=" 验证码"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"/>
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_300"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginLeft="@dimen/dp_40"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">
        <ImageView

            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
           android:src="@mipmap/login_icon_lock"
            android:layout_marginLeft="@dimen/dp_30"/>
        <EditText
           android:id="@+id/sing_pass"
            android:layout_width="@dimen/dp_170"
            android:layout_height="@dimen/dp_30"
            android:background="@null"
            android:textColorHint="#ffff"
            android:password="true"
            android:hint="登录密码"
            />
        <ImageView
            android:id="@+id/sing_hide"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/login_icon_eye"
            android:layout_marginLeft="@dimen/dp_50"/>
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_300"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginLeft="@dimen/dp_40"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_200">
        <TextView
            android:id="@+id/sing_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:text="已有账号？立即登录"/>
    </LinearLayout>
    <Button
        android:id="@+id/sing"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="100dp"
        android:text="注册"
        android:layout_gravity="center"
        android:textColor="#ff0000"
        android:background="@drawable/button"/>
</LinearLayout>